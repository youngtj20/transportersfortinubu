generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  role      String   @default("user") // admin, user
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  pages     Page[]
  posts     Post[]
  
  @@map("users")
}

model Post {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String?
  excerpt     String?
  featuredImage String?
  published   Boolean  @default(false)
  authorId    String
  category    String?
  tags        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  @@map("posts")
}

model Page {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String?  @db.LongText
  metaTitle   String?
  metaDescription String?
  featuredImage String?
  published   Boolean  @default(false)
  pageType    String   @default("static") // static, dynamic
  template    String   @default("default")
  slides      String?  @db.LongText // JSON array of slides
  sections    String?  @db.LongText // JSON array of sections
  authorId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  @@map("pages")
}

model Setting {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String?
  type        String   @default("text") // text, image, boolean, json
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("settings")
}

model Media {
  id          String   @id @default(cuid())
  filename    String
  originalName String
  mimeType    String
  size        Int
  path        String
  url         String
  alt         String?
  caption     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("media")
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  date        DateTime
  location    String?
  imageUrl    String?
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("events")
}

model TeamMember {
  id          String   @id @default(cuid())
  name        String
  title       String
  bio         String?
  imageUrl    String?
  email       String?
  phone       String?
  order       Int      @default(0)
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("team_members")
}

model MenuItem {
  id          String   @id @default(cuid())
  label       String
  url         String
  icon        String?
  order       Int      @default(0)
  parentId    String?
  published   Boolean  @default(true)
  target      String   @default("_self") // _self, _blank
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  parent      MenuItem?  @relation("MenuItemChildren", fields: [parentId], references: [id], onDelete: Cascade)
  children    MenuItem[] @relation("MenuItemChildren")
  
  @@map("menu_items")
}

model MovementMember {
  id                String   @id @default(cuid())
  fullName          String
  gender            String   // Male, Female, Other
  email             String?
  phoneNumber       String
  stateOfOrigin     String
  lga               String
  modesOfTransport  String   @db.LongText // JSON array of selected modes
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@map("movement_members")
}